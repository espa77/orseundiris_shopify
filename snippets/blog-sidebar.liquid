<div id="blog-sidebar">

{% if blog.all_tags.size > 0 %}
  <h3 class="custom-font">{{ 'blogs.sidebar.categories' | t }}</h3>
  <ul id="blog-categories">
    {% for tag in blog.all_tags %}
      {% if current_tags contains tag %}
      <li>{{ tag }}</li>
      {% else %}
      <li>{{ tag | link_to_tag: tag }}</li>
      {% endif %}
    {% endfor %}
  </ul>
{% endif %}

<h3 class="custom-font">{{ 'blogs.sidebar.latest_articles' | t }}</h3>

<ul>
  {% for article in blogs[blog.handle].articles limit:6 %}
    <li>
      <a href="{{ article.url }}">{{ article.title }}</a>
    </li>
  {% endfor %}
</ul>

{% if settings.show_blog_promobox %}

	{{ 'promobox-item-4.jpg' | asset_url | img_tag: settings.advert_item_4_alt_text | link_to: settings.advert_item_4_link }}

{% endif %}

<h3 class="custom-font">{{ 'blogs.sidebar.subscribe' | t }}</h3>

<p><a href="{{ blog.url }}.atom">Atom</a></p>

{% if settings.blogfeed_facebook %}

<h3>Facebook</h3>

<div class="fb-like-box" data-href="{{ settings.blogfeed_facebook_username }}" data-width="220" data-height="300" data-show-faces="true" data-border-color="#ffffff" data-stream="false" data-header="false"></div>

{% endif %}

<div class="clear"></div>

</div><!-- #blog-sidebar -->