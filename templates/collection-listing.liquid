<style>

#collections-listing ul {
list-style-type: none;
list-style-position: outside;
overflow: hidden;
}

#collections-listing ul li {
float: left;
width: 200px;
height: 300px;
margin-right: 30px;
}

#collections-listing ul li:Last-child {
margin-right: 0;
}

</style>


<div id="collections-listing">
  <div class="title-bar">
    <h2>{{ 'collections.general.product_collections' | t }}</h2>
    <div class="clear"></div>
  </div><!-- .title-bar -->
  <ul>
  {% for collection in collections %}
  {% unless collection.handle == 'frontpage' %}
    <li class="{{ collection.handle }}-collection">
    {% capture collection_title %}{{ collection.title | escape }}{% endcapture %}
      <div class="collection">
        <div class="collection-image">
          <a href="{{ collection.url }}" title="{{ 'collections.general.link_title' | t: title: collection_title }}">
            {{ collection.products.first.featured_image | product_img_url: 'medium' | img_tag: collection_title }}
          </a>
        </div><!-- end of .collection-image -->
        <div class="collection-description">
          <h3>
            <a href="{{ collection.url }}" title="{{ 'collections.general.link_title' | t: title: collection_title }}">
              {{ collection.title }}
            </a>
            <div class="hint">
				{{ 'collections.general.items_with_count' | t: count: collection.all_products_count }}
            </div>
          </h3>
        </div><!-- end of .collection-description -->
      </div><!-- end of .collection -->
    </li>
  {% endunless %}
  {% endfor %}
  </ul>
</div><!-- end of #collection-listing -->
